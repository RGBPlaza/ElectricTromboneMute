<Window x:Class="WPF_Version.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Version"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel x:Name="MainStackPanel">
        <ComboBox ItemsSource="{Binding AsioDrivers}" BorderThickness="0" Height="24" SelectedIndex="{Binding SelectedAsioDriverIndex}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" Height="24" FontSize="16" FontFamily="Montserrat Black"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button FontSize="16" FontFamily="Montserrat Black" Content="Go!" BorderThickness="0" Click="StartButton_Click" IsEnabled="{Binding CanStart}"/>
        <Rectangle Height="48" Width="{Binding IndicatorWidth}" Fill="IndianRed"/>

        <Canvas Height="128">
            <Polyline Stroke="IndianRed" Points="{Binding WavePoints}"/>
            <Polyline Stroke="IndianRed" Points="{Binding FTPoints}" Canvas.Top="64"/>
        </Canvas>

        <TextBlock Text="{Binding PeakFrequencyString}" Height="24" FontSize="16" FontFamily="Montserrat Black" Margin="16"/>

    </StackPanel>
</Window>
